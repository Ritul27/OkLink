<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.OkLink" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Background -->
        <item name="android:colorBackground">@color/royalCream</item>

        <!-- Primary -->
        <item name="colorPrimary">@color/royalPurple</item>
        <item name="colorPrimaryContainer">@color/royalPurpleDark</item>

        <!-- Accent -->
        <item name="colorSecondary">@color/royalGold</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/royalPurpleDark</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/textPrimary</item>

    </style>

    <!-- Royal Button Style -->
    <style name="RoyalButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/royalPurple</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>